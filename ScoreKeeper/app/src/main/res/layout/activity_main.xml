<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opaque_back"
    android:backgroundTintMode="screen"
    tools:context="com.gmail.robalascott.footballscorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/score"
                android:textColor="@color/orange"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:layout_width="match_parent" />

            <TextView
                android:id="@+id/scoreTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:text="@string/zero"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_width="match_parent" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:id="@+id/goalTeamA"
                android:scaleType="fitXY"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/goal"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:background = "@drawable/roundgoalbutton"
                />


            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/shotsTeamAButton"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/orange"
                android:background = "@drawable/roundshotbutton"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/yellowCardTeamAButton"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:textColor="@color/orange"
                        android:background = "@drawable/roundyellowbutton"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/redCardTeamAButton"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:textColor="@color/orange"
                        android:background = "@drawable/roundredbutton"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/score"
                android:textColor="@color/orange"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:layout_width="match_parent" />

            <TextView
                android:id="@+id/scoreTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:text="@string/zero"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_width="match_parent" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:id="@+id/goalTeamB"
                android:scaleType="fitXY"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/goal"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:background = "@drawable/roundgoalbutton"
                />


            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/shotsTeamBButton"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/orange"
                android:background = "@drawable/roundshotbutton"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/yellowCardTeamBButton"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:textColor="@color/orange"
                        android:background = "@drawable/roundyellowbutton"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/redCardTeamBButton"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:textColor="@color/orange"
                        android:background = "@drawable/roundredbutton"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/resetButton"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/orange"
        android:text="@string/reset"
        android:background = "@drawable/roundshotbutton"/>

</RelativeLayout>
